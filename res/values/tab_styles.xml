<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/holo_blue_light</item>
        <item name="android:textColorHighlight">@color/holo_blue_dark</item>
        <item name="android:textColorHint">@color/holo_green_dark</item>
        <item name="android:textColorLink">@color/holo_blue_light</item>
    </style>

    <style name="WalletFragmentDefaultDetailsHeaderTextAppearance" parent="@style/WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WalletFragmentDefaultButtonTextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/holo_blue_bright</item>
        <item name="android:textColorHighlight">@color/holo_blue_light</item>
        <item name="android:textColorHint">@color/holo_blue_light</item>
        <item name="android:textColorLink">@color/holo_blue_light</item>
    </style>

    <style name="WalletFragmentDefaultStyle">
        <item name="buyButtonHeight">48.0dip</item>
        <item name="buyButtonWidth">match_parent</item>
        <item name="buyButtonText">buy_with_google</item>
        <item name="buyButtonAppearance">classic</item>
        <item name="maskedWalletDetailsTextAppearance">@style/WalletFragmentDefaultDetailsTextAppearance</item>
        <item name="maskedWalletDetailsHeaderTextAppearance">@style/WalletFragmentDefaultDetailsHeaderTextAppearance</item>
        <item name="maskedWalletDetailsBackground">@color/holo_blue_light</item>
        <item name="maskedWalletDetailsButtonTextAppearance">@style/WalletFragmentDefaultButtonTextAppearance</item>
        <item name="maskedWalletDetailsButtonBackground">@android:drawable/btn_default</item>
        <item name="maskedWalletDetailsLogoTextColor">@color/holo_blue_light</item>
        <item name="maskedWalletDetailsLogoImageType">classic</item>
    </style>

    <style name="noActionBarNoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:listPreferredItemHeight">@dimen/list_preferred_item_height</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="noActionBarNoTitleBarNight" parent="@android:style/Theme.NoTitleBar">
        <item name="android:listPreferredItemHeight">@dimen/list_preferred_item_height</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="errorIcon">
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_marginLeft">14.0dip</item>
        <item name="android:src">?drawable_error_icon</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="readIcon" parent="@style/errorIcon">
        <item name="android:src">?drawable_ic_indicator_read</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tapNotificationTitle" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/powderblue</item>
    </style>

    <style name="dayTheme" parent="@style/noActionBarNoTitleBar">
        <item name="color_tab_background">@color/tab_background</item>
    </style>

</resources>