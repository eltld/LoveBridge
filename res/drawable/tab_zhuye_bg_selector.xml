<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active tab -->
    <item android:drawable="@drawable/showgo_pressed" android:state_selected="true"/>
    <!-- Inactive tab -->
    <item android:drawable="@drawable/showgo_pressed" android:state_checked="true"/>
    <!-- Pressed tab -->
    <item android:drawable="@drawable/showgo_pressed" android:state_pressed="true"/>
    <!-- Selected tab (using d-pad) -->
    <item android:drawable="@drawable/showgo_normal"/>

</selector>
